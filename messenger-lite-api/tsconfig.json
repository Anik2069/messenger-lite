{
  "compilerOptions": {
  "rootDir": "./src",
  "outDir": "./dist",
  "target": "ES2021",
  "module": "CommonJS",
  "lib": ["ES2021"],
  "types": ["node"],

  "sourceMap": true,
  "declaration": true,
  "declarationMap": true,

  "noUncheckedIndexedAccess": true,
  "exactOptionalPropertyTypes": true,

  "strict": true,
  "isolatedModules": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
,
  "include": ["src"],
  "exclude": ["node_modules"]
}
